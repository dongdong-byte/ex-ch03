spring.application.name=ex-ch03
#==================
# Server 설정
#==========
# http://localhost:8090/
server.port=8090

#==================
# 인코딩 설정
#================
# 요청 데이터 - UTF-8(한글 등 멀티바이트)
server.servlet.encoding.charset=utf-8
# 응답 데이터 - 응답 헤더 지정
server.servlet.encoding.force=true
# 응답본문 - 응답 바디 utf-8 강제 지정
#spring.http.encoding.force=true
#===================
# 로깅 설정
#===================
# 기본값 - 모든 info
logging.level.root = info
#logging.level.kim=debug
# 특정 패키지 - 특정 레벨(서비스) - debug
logging.level.kim.service=debug
# 로그 파일명
logging.file.name=logs/app.log
# 로그 한글 설정
logging.charset.console=UTF-8
logging.charset.file=UTF-8
# JSON 응답 한글 설정
spring.jackson.serialization.write-dates-as-timestamps=false
spring.jackson.time-zone=Asia/Seoul

#===================
# MyBatis 설정
#===================
mybatis.mapper-locations=classpath:dat10_20/mapper/**/*.xml
mybatis.type-aliases-package=kim.domain
mybatis.configuration.map-underscore-to-camel-case=true

